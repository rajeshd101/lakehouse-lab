# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=lakehouse-lab
QUERY_ENGINE=trino
SCHEMA=default

# =============================================================================
# ICEBERG CONFIGURATION
# =============================================================================
ENABLE_ICEBERG=true

# =============================================================================
# SQL SERVER CONFIGURATION
# =============================================================================
ENABLE_SQLSERVER=true

# =============================================================================
# ORACLE CONFIGURATION
# =============================================================================
ENABLE_ORACLE=true

# =============================================================================
# SNOWFLAKE CONFIGURATION
# =============================================================================
ENABLE_SNOWFLAKE=false
SNOWFLAKE_ACCOUNT=xy12345.us-east-1
SNOWFLAKE_USER=DATA_ENG_USER
SNOWFLAKE_PASSWORD=ComplexPassword123!
SNOWFLAKE_ROLE=ACCOUNTADMIN
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=ANALYTICS_DB

# =============================================================================
# AWS CONFIGURATION (S3 & GLUE)
# =============================================================================
ENABLE_AWS=false
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=my-lakehouse-bucket

# =============================================================================
# GOOGLE CLOUD CONFIGURATION (GCS)
# =============================================================================
ENABLE_GCP=false
GOOGLE_APPLICATION_CREDENTIALS=/usr/local/airflow/include/gcp-service-account.json
GCS_BUCKET=my-gcs-lakehouse-bucket

# =============================================================================
# AZURE CONFIGURATION (BLOB STORAGE)
# =============================================================================
ENABLE_AZURE=false
AZURE_STORAGE_ACCOUNT_URL=https://mylakehousestorage.blob.core.windows.net
AZURE_STORAGE_ACCOUNT_KEY=your_azure_storage_account_key
AZURE_CONTAINER=raw-data

# =============================================================================
# DATABRICKS CONFIGURATION
# =============================================================================
ENABLE_DATABRICKS=false
DATABRICKS_HOST=adb-1234567890123456.7.azuredatabricks.net
DATABRICKS_HTTP_PATH=/sql/1.0/endpoints/a1b2c3d4e5f6g7h8
DATABRICKS_TOKEN=your_databricks_token

# =============================================================================
# TRINO CONFIGURATION
# =============================================================================
TRINO_HOST=trino
TRINO_PORT=8080
TRINO_USER=admin
TRINO_PASSWORD=
TRINO_CATALOG=iceberg
